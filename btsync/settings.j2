{ 
  "device_name": "{{ btsync_device_name|default(btsync_device_name_default) }}",
  "listening_port" : 0,                       // 0 - randomize port
  
/* storage_path dir contains auxilliary app files
   if no storage_path field: .sync dir created in the directory 
   where binary is located.
   otherwise user-defined directory will be used 
*/
  "storage_path" : "/var/log/btsync",

// uncomment next line if you want to set location of pid file
// "pid_file" : "/var/run/btsync/btsync.pid",


  "check_for_updates" : false, 
  "use_upnp" : true,                              // use UPnP for port mapping


/* limits in kB/s
   0 - no limit
*/
  "download_limit" : 0,                       
  "upload_limit" : 0, 

/* remove "listen" field to disable WebUI
   remove "login" and "password" fields to disable credentials check
*/
  "webui" :
  {
    "listen" : "{{ btsync_listen_address|default(btsync_listen_address_default) }}:{{ btsync_listen_port|default(btsync_listen_port_default) }}",
    "login" : "{{ btsync_login|default(btsync_login_default) }}",
    "password" : "{{ btsync_password|default(btsync_password_default) }}"
  }

}
